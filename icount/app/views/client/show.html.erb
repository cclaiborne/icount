
<h2>Client Reports</h2>

<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @client.description %>
</p>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Living Condition</th>
      <th>Gender</th>
      <th>Ethnicity</th>
      <th>Age</th>
      <th>Needs</th>
      <th>Notes</th>
      <th></th>
    </tr>
  </thead>
    <tbody>

    <% @reports.each do |report| %>
        <tr>
          <td><%= report.location %></td>
          <td><%= report.livingcondition %></td>
          <td><%= report.gender %></td>
          <td><%= report.ethnicity %></td>
          <td><%= report.age %></td>
          <td><%= report.needs %></td>
          <td><%= report.notes %></td>
          <td><%= link_to 'Delete', client_report_path(report.client, report), method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </tr>
   <!--        <td><%= report.livingcondition %></td> -->
          <!-- <td><%#= link_to 'Show', client %></td> -->
    <% end %>
  </tbody>
</table>


<%= link_to 'View Clients', client_index_path, :class => "button" %>
<%= link_to 'Add New Report', new_client_report_path(@client), :class => "button" %>

